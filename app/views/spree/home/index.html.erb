<%=session[:locale] %>

<main>
  <div class="container">
    <section class="row main_section" id="<%= taxons(0)%>">
      <%= render partial: 'section_header'%>
      <div class="content col-xs-12 col-sm-12 col-md-11">
        <div class="col-xs-12 col-sm-8 col-md-8 nopadding nopadding-r">
          <%= render partial: 'promo_article', locals: {size: 'big', position: 0} %>
        </div>
        <div class="col-xs-12 col-sm-4 col-md-4 nopadding nopadding-r">
          <%= render partial: 'promo_article', locals: {size: 'small', position: 1} %>
          <%= render partial: 'promo_article', locals: {size: 'small', position: 2} %>
        </div>
      </div>
    </section>
    <section class="row" id="<%= taxons(1)%>">
      <%= render partial: 'section_header'%>
      <div class="content col-xs-12 col-sm-12 col-md-11">
        <div class="content-row">
          <div class="row">
            <% index=1 %>
            <% taxon_new_products_products.each do |p| %>
              <div class="col-xs-6 col-sm-4 col-md-2">
                <article class="home-product">
                  <figure>
                    <%= link_to small_image(p, itemprop: "image",  class: 'img-responsive'), p %>
                  </figure>
                  <div class="title"><%= p.name %></div>
                  <div class="price" itemprop="price"><%= display_price p%>
                    <sub itemprop="priceCurrency" class="<%=current_currency.downcase%>">
                      <%= current_currency%>
                    </sub>
                  </div>
                  <div class="action">
                    <%= render :partial => 'cart_form', locals: {product:p} %>
                  </div>
                </article>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </section>
    <section class="row" id="<%= taxons(2)%>">
      <%= render partial: 'section_header'%>
      <div class="content col-xs-12 col-sm-12 col-md-11">
        <div class="content-row">
          <div class="row">
             <% taxon_salest_products.each do |p|%>
                <div class="col-xs-12 col-sm-4 col-md-4">
                  <article class="home-product">
                    <figure>
                      <%= link_to product_image(p, itemprop: "image",  class: 'img-responsive'), p %>
                      <div class="data">
                        <!--<div class="picture_author"><%#= p.author %></div>-->
                        <div class="picture_title"><%= p.name %></div>
                      </div>
                    </figure>
                    <div class="author"><%= p.author %></div>
                    <div class="cant_selled"><%=p.user.products.count%> <%= Spree.t(:pieze)%></div>
                  </article>
                 </div>
            <% end %>
          </div>
        </div>

      </div>
    </section>
    <section class="row" id="<%= taxons(3)%>">
      <%= render partial: 'section_header'%>
      <div class="content col-xs-12 col-sm-12 col-md-11">
        <div class="content-row">
          <div class="row">
              <% taxon_deals_products.each do |p|%>
                <div class="col-xs-6 col-sm-4 col-md-2">
                  <%= render partial: 'article', locals: {image: index, show_price_promotion: true, p:p} %>
                 </div>
            <% end %>
          </div>
        </div>
      </div>
    </section>
  </div>
</main>
