<main>
  <div class="container">
    <section class="row main_section" id="collections">
      <%= render partial: 'section_header'%>
      <div class="content col-xs-12 col-sm-12 col-md-11">
        <div class="col-xs-12 col-sm-8 col-md-7 nopadding nopadding-r">
          <%= render partial: 'promo_article', locals: {size: 'big', image: 'prod1.jpg'} %>
        </div>
        <div class="col-xs-12 col-sm-4 col-md-5 nopadding nopadding-r">
          <%= render partial: 'promo_article', locals: {size: 'small', image: 'prod2.jpg'} %>
          <%= render partial: 'promo_article', locals: {size: 'small', image: 'prod3.jpg'} %>
        </div>
      </div>
    </section>
    <section class="row" id="new_products">
      <%= render partial: 'section_header'%>
      <div class="content col-xs-12 col-sm-12 col-md-11">
        <% 2.times do %>
            <div class="content-row">
              <div class="row">
                <% index=1 %>
                <% 6.times do %>
                    <div class="col-xs-6 col-sm-4 col-md-2">
                      <%= render partial: 'article', locals: {image: index} %>
                      <% index+=1 %>
                    </div>
                <% end %>
              </div>
            </div>
        <% end %>
      </div>
    </section>
    <section class="row" id="most_selled">
      <%= render partial: 'section_header'%>
      <div class="content col-xs-12 col-sm-12 col-md-11">
        <div class="content-row">
          <div class="row">
            <% index=7 %>
            <% 3.times do %>
                <div class="col-xs-12 col-sm-4 col-md-4">
                  <%= render partial: 'most_selled_article', locals: {image: index, show_data: true} %>
                  <% index+=1 %>
                </div>
            <% end %>
          </div>
        </div>

      </div>
    </section>
    <section class="row" id="specials">
      <%= render partial: 'section_header'%>
      <div class="content col-xs-12 col-sm-12 col-md-11">
        <div class="content-row">
          <div class="row">
            <% index=1 %>
            <% 6.times do %>
                <div class="col-xs-6 col-sm-4 col-md-2">
                  <%= render partial: 'article', locals: {image: index, show_price_promotion: true} %>
                  <% index+=1 %>
                </div>
            <% end %>
          </div>
        </div>
      </div>
    </section>
  </div>
</main>
